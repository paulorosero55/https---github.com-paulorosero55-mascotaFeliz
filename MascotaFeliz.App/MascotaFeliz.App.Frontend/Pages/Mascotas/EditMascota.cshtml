@page
@model MascotaFeliz.App.Frontend.Pages.EditMascotaModel
@{
    int mascotaId = Model.mascota.Id;
    
}
<h2>Edicion de datos de la Mascota</h2>
<form method="post">
    <input type="hidden" asp-for="mascota.Id"/>
    <input type="hidden" asp-for="mascota.Dueno"/>
    <div class="form-group">
        <label asp-for="mascota.Nombre"></label>
        <input asp-for="mascota.Nombre" class= "form-control">
        <span class="text-danger" asp-validation-for="mascota.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="mascota.Color"></label>
        <input asp-for="mascota.Color" class= "form-control">
        <span class="text-danger" asp-validation-for="mascota.Color"></span>
    </div>
    <div class="form-group">
        <label asp-for="mascota.Especie"></label>
        <input asp-for="mascota.Especie" class= "form-control">
        <span class="text-danger" asp-validation-for="mascota.Especie"></span>
    </div>
    <div class="form-group">
        <label asp-for="mascota.Raza"></label>
        <input asp-for="mascota.Raza" class= "form-control">
        <span class="text-danger" asp-validation-for="mascota.Raza"></span>
    </div>
    <div class="form-group">
        <label for="veterinario">Veterinario</label>
        <select class= "form-control" id="veterinario" asp-for="mascota.Veterinario.Id" name="veterinarioId">
            <option value="0">--Seleccione el veterinario--</option>
            @foreach (var veterinario in Model.Veterinarios){
                <option value=@veterinario.Id>@veterinario.Nombres @veterinario.Apellidos</option>
            }

        </select>
        
        <span class="text-danger" asp-validation-for="mascota.Raza"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>

</form>
<a asp-page="./ListaMascotas" class="btn-default">Volver a la lista de Mascotas</a>
